<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context="vandyke.caloriestoexercise.MainActivity">
    <!--focusable stuff is so the EditText doesn't gain focus on startup-->

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <EditText
            android:layout_width="134dp"
            android:inputType="number"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/calorieEntry"
            android:hint="@string/calorieEntryHint" android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"
            android:textAlignment="center" android:textSize="36sp" android:fontFamily="sans-serif"
            android:layout_height="60dp"
            android:maxLength="6"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="16dp"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/burnActivitiesList"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/calorieEntry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:text="Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/burnActivitiesList"
            android:layout_marginBottom="4dp"
            android:textAllCaps="false"
            android:textStyle="normal|bold"/>

    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeLabel"
            app:layout_constraintBottom_toTopOf="@+id/burnActivitiesList"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:textStyle="normal|bold"/>

</android.support.constraint.ConstraintLayout>
